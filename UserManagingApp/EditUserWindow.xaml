<Window x:Class="UserManagingApp.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User" Height="250" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Name:" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Width="80" Margin="0,0,10,0" IsCancel="True"/>
                <Button Content="OK" Width="80" Click="OKButton_Click" IsDefault="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>